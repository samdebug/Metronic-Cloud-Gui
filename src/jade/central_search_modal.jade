doctype html
div
  div.modal-header
    button.close(type="button",data-dismiss="modal",aria-hidden="true")
    h3(ms-text="lang.title")
  div.modal-body
    form.machines.form-horizontal(novalidate="novalidate",action="javascript:;")
      table.table.table-striped
        thead
          tr
            th(style="width:20px")
              div#uniform-volume-group.checker
                span(ms-class="checked:all_checked")
                  input(type="checkbox",style="opacity: 0;",ms-duplex-radio="all_checked")
            th(ms-text="lang.th_volumes")
        tbody(ms-each-e="machines")
          tr
            td
              div#uniform-undefined.checker
                span(ms-class="checked: e.checked")
                  input.volume-group(name="machine-checkbox",type="checkbox",style="opacity: 0;",ms-duplex-radio="e.checked")
            td(ms-text="e.ifaces[0]")
  div.modal-footer
    button.btn(type="button",data-dismiss="modal")
      i.icon-undo
      | {{lang.btn_cancel}}
    button.btn.green(type="button",ms-click="submit")
      i.icon-ok
      | {{lang.btn_confirm}}
