doctype html
div.container-fluid
  h3.page-title(ms-html="lang.title")
  div.row-fluid
    div.span12
      div.portlet.box.blue
        div.portlet-title
          div.caption
            i.icon-bar-chart
            | {{lang.tabletitle}}
          div.actions
            div.btn-group
              a.btn.btn-default.btn-sm(href="#",data-toggle="dropdown")
                i.icon-user
                | 添加
                i.icon-angle-down(style="padding-left: 10px;")
              ul.dropdown-menu.pull-right
                li(ms-click="manual")
                  a(href="#")
                    i.icon-hand-up(style="padding-right: 5px;")
                    | 手动
                li(ms-click="search")
                  a(href="#")
                    i.icon-spinner(style="padding-right: 5px;")
                    | 自动
            
        div.portlet-body
          ul.tree#tree_1
            li
              span
                a(href='javascript: void(0);',data-toggle="branch")
                  i.icon-screen-desktop
                  | 服务器{{server_navs}}
                ul(class="branch",ms-each-e="devices")
                  li
                    span
                      a(href='javascript: void(0);',ms-click="detail(e)")
                        i.icon-screen-desktop
                        | 存储{{e.name}}
                      div(ms-html="fattr_machine_status(e.health)",style="padding-left: 5px;display:inline")
